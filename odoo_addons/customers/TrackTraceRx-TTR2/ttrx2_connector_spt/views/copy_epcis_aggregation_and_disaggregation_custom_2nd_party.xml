<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <menuitem
        id="copy_epcis_aggregation_and_disaggregation_custom_2nd_party"
        name="EPICS - Aggregation and Disaggregation"
        groups="ttrx2_connector_spt.group_ttr2_access"
        action="copy_epcis_aggregation_and_disaggregation_custom_2nd_party_action"
        parent="menu_ttr2_products_spt"
        sequence="20"
    />

    <record id="copy_epcis_aggregation_and_disaggregation_custom_2nd_party_action" model="ir.actions.act_window">
        <field name="name">EPICS - Aggregation and Disaggregation</field>
        <field name="res_model">copy.epcis.aggregation.and.disaggregation.custom.2nd.party</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                View, search, audit and analyse EPCIS Aggregation and Disaggregation Records
            </p>
        </field>
    </record>

    <record id="copy_epcis_aggregation_and_disaggregation_custom_2nd_party_view_tree" model="ir.ui.view">
        <field name="name">copy.epcis.aggregation.and.disaggregation.custom.2nd.party.view.tree</field>
        <field name="model">copy.epcis.aggregation.and.disaggregation.custom.2nd.party</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="uuid" />
                <field name="type" />
                <field name="created_on" />
                <field name="last_update" />
            </tree>
        </field>
    </record>

    <record id="copy_epcis_aggregation_and_disaggregation_custom_2nd_party_view_form" model="ir.ui.view">
        <field name="name">copy.epcis.aggregation.and.disaggregation.custom.2nd.party.view.form</field>
        <field name="model">copy.epcis.aggregation.and.disaggregation.custom.2nd.party</field>
        <field name="arch" type="xml">
            <form string="Aggregation and Disaggregation">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="uuid" />
                        <field name="type" />
                        <field name="created_on" />
                        <field name="last_update" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="copy_epcis_aggregation_and_disaggregation_custom_2nd_party_view_search" model="ir.ui.view">
        <field name="name">copy.epcis.aggregation.and.disaggregation.custom.2nd.party.view.search</field>
        <field name="model">copy.epcis.aggregation.and.disaggregation.custom.2nd.party</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="uuid" />
                <field name="type" />
                <field name="created_on" />
                <field name="last_update" />
            </search>
        </field>
    </record>

</odoo>
