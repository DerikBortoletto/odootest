<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">br.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="fiscal_localization_setting_container" position="after">
				<div class="row mt16 o_settings_container" name="short_code_setting_container">
				    <div class="col-12 col-lg-6 o_setting_box">
				        <div class="o_setting_left_pane"/>
				        <div class="o_setting_right_pane">
				            <span class="o_form_label">Short Code Sequence</span>
				            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
				            <div class="text-muted">
				                Short Code Sequence Generator
				            </div>
				            <div class="content-group">
				                <div class="row mt16">
				                    <label for="short_code_sequence_id" string="Sequence" class="col-lg-3 o_light_label"/>
				                    <field name="short_code_sequence_id" />
				                </div>
				            </div>
				        </div>
				    </div>
				</div>
			</div>        
        </field>
    </record>
</odoo>
